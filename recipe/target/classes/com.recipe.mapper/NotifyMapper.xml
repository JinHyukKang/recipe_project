<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recipe.mapper.NotifyMapper">

<!-- 공지사항 글작성 -->
<select id="notifyWrite">
	INSERT INTO notify (notify_title,
						 notify_content, 
						 user_nickname,
						 user_num,
						 notify_filename,
						 notify_realname,
						 file_path)
	VALUES(#{notify_title},
		   #{notify_content},
		   #{user_nickname},
		   #{user_num},
		   #{notify_filename},
		   #{notify_realname},
		   #{file_path})
</select>

<!-- 공지사항 데이터 불러오기 -->
<select id="findNotify" resultType="com.recipe.model.NotifyVO">
	SELECT *
	FROM notify
	ORDER BY insert_date DESC
</select>

<!-- 공지사항 게시글 개수 가져오기 -->
<select id="countNotify" resultType="int">
	SELECT COUNT(*)
	FROM notify
</select>

<!-- 공지사항 상세 보기 데이터 불러오기 -->
<select id="notifyView" resultType="com.recipe.model.NotifyVO">
	SELECT *
	FROM notify
	WHERE notify_num = #{notify_num}
</select>

<!-- 공지글 삭제하기 -->
<select id="DeleteNotify">
	DELETE *
	FROM notify
	WHERE notify_num = #{notify_num}
</select>


</mapper>